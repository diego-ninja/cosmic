#!/usr/bin/env php
<?php

use Ninja\Cosmic\Application\Application;
use Ninja\Cosmic\Config\Env;
use Ninja\Cosmic\Terminal\Spinner\ProcessSpinner;
use Ninja\Cosmic\Terminal\Spinner\Spinner;
use Ninja\Cosmic\Terminal\Terminal;
use Ninja\Cosmic\Terminal\Theme\Theme;
use Symfony\Component\Process\Process;

require_once __DIR__ . '/vendor/autoload.php';

$dotenv = Dotenv\Dotenv::createMutable(__DIR__);
$dotenv->safeLoad();


$theme = Theme::fromThemeFolder(__DIR__ . '/themes/default');
Terminal::withTheme($theme);

$app = new Application(
    name: sprintf("%s %s", Terminal::getTheme()->getAppIcon(), Env::get("APP_NAME")),
    version: Env::getVersion()
);

$app->setAutoExit(false);

$spinner = (new Spinner(style: 'dots'))
    ->setPadding(4)
    ->setMessage('Executing <comment>composer-require-checker</comment>...');

try {
    $process = Process::fromShellCommandline("composer-require-checker");
    $res = ProcessSpinner::for($process, 'Executing <comment>composer-require-checker</comment>...');

    /**
    $res = $spinner->callback(function () use ($process) {
        $process->start();
        while ($process->isRunning()) {
            sleep(1);
        }
        return $process->isSuccessful();
    });
    **/
} catch (Exception $e) {
}


